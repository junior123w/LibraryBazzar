@model LibraryBazzar.Models.Book

@{
    ViewData["Title"] = "DetailsOfBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsOfBook</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Synopsis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Synopsis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <form class="d-inline" asp-action="AddToCart">

            <input type="hidden" name="BookId" value="@Model.BookId" />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Quantity</span>
                </div>

                <input class="form-control" type="number" name="quantity" min="1" step="1" value="1" />
                <div class="input-group-append ">
                    <input type="submit" value="Quick Add" class="btn btn-secondary" />
                </div>

            </div>

        </form>
    }
    <a asp-action="Index">Back to List</a>
</div>
